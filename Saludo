<context>
  <input pattern="(hola|que tal) *">
    <output value="Hello $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! Cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Gusto en conocrte $UserName!"/>
      </input>

    </context>
  </input>
</context>